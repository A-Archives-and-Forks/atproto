{
  "lexicon": 1,
  "id": "app.bsky.embed.images",
  "description": "A set of images embedded in some other form of content",
  "defs": {
    "main": {
      "type": "object",
      "required": ["images"],
      "properties": {
        "images": {
          "type": "array",
          "items": {"type": "ref", "ref": "#image"},
          "maxLength": 4
        }
      }
    },
    "image": {
      "type": "object",
      "required": ["image", "alt"],
      "properties": {
        "image": {
          "type": "image",
          "accept": ["image/*"],
          "maxWidth": 2000,
          "maxHeight": 2000,
          "maxSize": 1000000
        },
        "alt": {"type": "string"}
      }
    },
    "view": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "array",
          "items": {"type": "ref", "ref": "#viewImage"},
          "maxLength": 4
        }
      }
    },
    "viewImage": {
      "type": "object",
      "required": ["thumb", "fullsize", "alt"],
      "properties": {
        "thumb": {"type": "string"},
        "fullsize": {"type": "string"},
        "alt": {"type": "string"}
      }
    }
  }
}
