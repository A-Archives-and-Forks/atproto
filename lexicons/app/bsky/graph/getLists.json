{
  "lexicon": 1,
  "id": "app.bsky.graph.getLists",
  "defs": {
    "main": {
      "type": "query",
      "description": "Fetch a list of lists that belong to an actor",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": {"type": "string", "format": "did"},
          "limit": {"type": "integer", "minimum": 1, "maximum": 100, "default": 50},
          "cursor": {"type": "string"}
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["subject", "lists"],
          "properties": {
            "cursor": {"type": "string"},
            "subject": {"type": "ref", "ref": "app.bsky.actor.defs#profileView"},
            "lists": {
              "type": "array",
              "items": {"type": "ref", "ref": "app.bsky.actor.defs#listView"}
            }
          }
        }
      }
    }
  }
}
