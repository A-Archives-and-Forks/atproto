{
  "lexicon": 1,
  "id": "app.bsky.graph.defs",
  "defs": {
    "listView": {
      "type": "object",
      "required": ["name", "purpose"],
      "properties": {
        "name": {"type": "string", "maxLength": 64, "minLength": 1},
        "purpose": {"type": "ref", "ref": "#listPurpose"},
        "description": {"type": "string", "maxGraphemes": 300, "maxLength": 3000},
          "descriptionFacets": {
            "type": "array",
            "items": {"type": "ref", "ref": "app.bsky.richtext.facet"}
          },
        "avatar": {"type": "string"},
        "viewer": {"type": "ref", "ref": "#listViewerState"},
        "indexedAt": {"type": "string", "format": "datetime"}
      }
    },
    "listItemView": {
      "type": "object",
      "required": ["subject"],
      "properties": {
        "subject": {"type": "ref", "ref": "app.bsky.actor.defs#profileView"},
        "reason": {"type": "string", "maxLength": 5000, "maxGraphemes": 1000},
        "reasonFacets": {
          "type": "array",
          "items": {"type": "ref", "ref": "app.bsky.richtext.facet"}
        }
      }
    },
    "listPurpose": {
      "type": "string",
      "knownValues": [
        "app.bsky.graph.defs#blocklist"
      ]
    },
    "blocklist": {
      "type": "token",
      "description": "A list of actors to do an aggregate block on"
    },
    "listViewerState": {
      "type": "object",
      "properties": {
        "blocked": {"type": "string", "format": "at-uri"}
      }
    }
  }
}
