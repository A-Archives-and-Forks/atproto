{
  "lexicon": 1,
  "id": "app.bsky.label.labeler",
  "defs": {
    "main": {
      "type": "record",
      "description": "A declaration of the existence of labeler.",
      "key": "any",
      "record": {
        "type": "object",
        "required": ["did", "displayName", "policies", "createdAt"],
        "properties": {
          "did": { "type": "string", "format": "did" },
          "displayName": {
            "type": "string",
            "maxGraphemes": 24,
            "maxLength": 240
          },
          "description": {
            "type": "string",
            "maxGraphemes": 300,
            "maxLength": 3000
          },
          "descriptionFacets": {
            "type": "array",
            "items": { "type": "ref", "ref": "app.bsky.richtext.facet" }
          },
          "avatar": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000
          },
          "policies": {"type": "ref", "ref": "app.bsky.label.defs#labelerPolicies"},
          "labels": {
            "type": "union",
            "refs": ["com.atproto.label.defs#selfLabels"]
          },
          "createdAt": { "type": "string", "format": "datetime" }
        }
      }
    }
  }
}
