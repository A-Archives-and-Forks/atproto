{
  "lexicon": 1,
  "id": "app.bsky.actor.ref",
  "description": "A reference to an actor in the network.",
  "defs": {
    "withInfo": {
      "type": "object",
      "required": ["did", "handle"],
      "properties": {
        "did": {"type": "string", "format": "did"},
        "handle": {"type": "string"},
        "displayName": {
          "type": "string",
          "maxLength": 64
        },
        "avatar": { "type": "string" },
        "viewer": {"type": "ref", "ref": "#viewerState"}
      }
    },
    "viewerState": {
      "type": "object",
      "properties": {
        "muted": {"type": "boolean"},
        "following": {"type": "string", "format": "at-uri"},
        "followedBy": {"type": "string", "format": "at-uri"}
      }
    }
  }
}
