{
  "lexicon": 1,
  "id": "app.bsky.feed.getPostThread",
  "defs": {
    "main": {
      "type": "query",
      "parameters": {
        "type": "params",
        "required": ["uri"],
        "properties": {
          "uri": {"type": "string"},
          "depth": {"type": "integer"}
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["thread"],
          "properties": {
            "thread": {
              "type": "union",
              "refs": ["#postInThread", "#notFoundPost"]
            }
          }
        }
      },
      "errors": [
        {"name": "NotFound"}
      ]
    },
    "postInThread": {
      "type": "object",
      "required": ["uri", "cid", "author", "record", "replyCount", "repostCount", "upvoteCount", "downvoteCount", "indexedAt"],
      "properties": {
        "post": {"type": "post", "ref": "app.bsky.feed.post#view"},
        "parent": {"type": "union", "refs": ["#postInThread", "#notFoundPost"]},
        "replies": {
          "type": "array",
          "items": {"type": "union", "refs": ["#postInThread", "#notFoundPost"]}
        },
        "viewer": {"type": "ref", "ref": "app.bsky.feed.viewState"}
      }
    },
    "notFoundPost": {
      "type": "object",
      "required": ["uri", "notFound"],
      "properties": {
        "uri": {"type": "string"},
        "notFound": {"type": "boolean", "const": true}
      }
    }
  }
}
