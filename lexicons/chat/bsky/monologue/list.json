{
  "lexicon": 1,
  "id": "chat.bsky.monologue.list",
  "defs": {
    "main": {
      "type": "procedure",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 50
            },
            "cursor": { "type": "string" }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["monologues"],
          "properties": {
            "cursor": { "type": "string" },
            "monologues": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "chat.bsky.monologue.defs#monologueView"
              }
            }
          }
        }
      }
    }
  }
}
