{
  "lexicon": 1,
  "id": "chat.bsky.monologue.defs",
  "defs": {
    "monologueViewSubject": {
      "type": "object",
      "required": ["did"],
      "properties": {
        "did": { "type": "string", "format": "did" }
      }
    },
    "monologueView": {
      "type": "object",
      "required": ["subject", "muted", "unreadCount"],
      "properties": {
        "subject": {
          "type": "union",
          "refs": [
            "app.bsky.actor.defs#profileViewBasic",
            "#monologueViewSubject"
          ]
        },
        "muted": { "type": "boolean" },
        "unreadCount": { "type": "integer" }
      }
    },
    "messageViewAuthor": {
      "type": "object",
      "required": ["did"],
      "properties": {
        "did": { "type": "string", "format": "did" }
      }
    },
    "messageView": {
      "type": "object",
      "required": ["id", "author", "timestamp", "text"],
      "properties": {
        "id": { "type": "string", "format": "at-uri" },
        "author": { "type": "ref", "ref": "#messageViewAuthor" },
        "timestamp": { "type": "string", "format": "datetime" },

        "text": {
          "type": "string",
          "maxLength": 10000,
          "maxGraphemes": 1000
        },
        "facets": {
          "type": "array",
          "description": "Annotations of text (mentions, URLs, hashtags, etc)",
          "items": { "type": "ref", "ref": "app.bsky.richtext.facet" }
        },
        "embed": {
          "type": "union",
          "refs": ["app.bsky.embed.record#view"]
        }
      }
    },
    "deletedMessageView": {
      "type": "object",
      "required": ["id", "author", "timestamp"],
      "properties": {
        "id": { "type": "string", "format": "at-uri" },
        "author": { "type": "ref", "ref": "#messageViewAuthor" },
        "timestamp": { "type": "string", "format": "datetime" }
      }
    }
  }
}
