{
  "lexicon": 1,
  "id": "com.atproto.server.validateChallenge",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Validate a multifactor auth challenge to login to your account.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["id", "code"],
          "properties": {
            "id": {"type": "string"},
            "code": {"type": "string"}
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["accessJwt", "refreshJwt", "handle", "did"],
          "properties": {
            "accessJwt": {"type": "string"},
            "refreshJwt": {"type": "string"},
            "handle": {"type": "string", "format": "handle"},
            "did": {"type": "string", "format": "did"},
            "email": {"type": "string"}
          }
        }
      },
      "errors": [
        {"name": "ChallengeFailed"},
        {"name": "ChallengeExpired"}
      ]
    }
  }
}
