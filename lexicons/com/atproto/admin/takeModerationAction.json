{
  "lexicon": 1,
  "id": "com.atproto.admin.takeModerationAction",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Take a moderation action on a repo.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["action", "subject", "reason", "createdBy"],
          "properties": {
            "action": {
              "type": "string",
              "knownValues": [
                "com.atproto.admin.def#takedown",
                "com.atproto.admin.def#flag",
                "com.atproto.admin.def#acknowledge"
              ]
            },
            "subject": {
              "type": "union",
              "refs": [
                "com.atproto.admin.def#repoRef",
                "com.atproto.repo.strongRef"
              ]
            },
            "subjectBlobCids": {"type": "array", "items": {"type": "string", "format": "cid"}},
            "reason": {"type": "string"},
            "createdBy": {"type": "string", "format": "did"}
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "com.atproto.admin.def#actionView"
        }
      },
      "errors": [{ "name": "SubjectHasAction" }]
    }
  }
}
