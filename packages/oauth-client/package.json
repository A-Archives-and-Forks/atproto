    "@atproto-labs/jwk": "workspace:*",
    "@atproto-labs/oauth-client-metadata": "workspace:*",
    "@atproto-labs/oauth-server-metadata": "workspace:*",
    "@atproto-labs/oauth-server-metadata-resolver": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
